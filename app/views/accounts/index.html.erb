<h1>Listing accounts</h1>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="accounts">  <thead>
  <tr>
    <th>Account Name</th>
    <th>Service Name</th>
    <th>Web URI</th>
    <th>Check URI</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<thead>
<tbody>
<% @accounts.each do |account| %>
  <tr>
    <td><%= account.account_name %></td>
    <td><%= account.service_name %></td>
    <td><%= account.web_uri %></td>
    <td><%= account.check_uri %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_tapir_entities_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>


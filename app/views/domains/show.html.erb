<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @domain.name %>
</p>

<p>
  <b>Status:</b>
  <%= @domain.status %>
</p>

<p>
  <b>Registered:</b>
  <%= @domain.registered %>
</p>

<p>
  <b>Available:</b>
  <%= @domain.available %>
</p>

<p>
  <b>Referral Whois:</b>
  <ul>
  <% @domain_referral_whois_array.each do |x| %>
    <li><%= x %> </li>
   <% end %>
  </ul>
</p>

<p>
  <b>Registrar Name:</b>
  <%= link_to @domain.registrar_name, @domain.registrar_url %>
</p>

<p>
  <b>Created On:</b>
  <%= @domain.record_created_on %>
</p>

<p>
  <b>Updated On:</b>
  <%= @domain.record_updated_on %>
</p>

<p>
  <b>Expires On:</b>
  <%= @domain.record_expires_on %>
</p>

<p>
<b>Parents:</b>
  <ul>
  <% @domain.parents.each {|p|%>
    <li><%= link_to p, eval("#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @domain.children.each {|c|%>
    <li><%= link_to c, eval("#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @domain.tasks.each {|t|%>
    <li><%= link_to t, eval("#{t.underscore}_path(t.name)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Task Runs:</b>
  <ul>
  <% @domain.task_runs.each {|r|%>
    <li><%= link_to r, task_run_path(r.id)  %></li>
  <% } %>
  </ul>
</p>

<%= link_to 'Edit', edit_domain_path(@domain) %> |
<%= link_to "Destroy", @domain, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', domains_path %>

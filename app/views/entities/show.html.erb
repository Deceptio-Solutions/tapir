<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @entity.name %>
</p>

<p>
<b>Parents:</b>
  <ul>
  <% @entity.parents.each {|p|%>
    <li><%= link_to p, eval("tapir_entities_#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @entity.children.each {|c|%>
    <li><%= link_to c, eval("tapir_entities_#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @entity.tasks.each {|t|%>
    <li><%= link_to t,tapir_task_path(t.task_name)  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Task Runs:</b>
  <ul>
  <% @entity.task_runs.each {|r|%>
    <li><%= link_to r, tapir_task_run_path(r)  %></li>
  <% } %>
  </ul>
</p>

<%= link_to "Destroy", tapir_entities_path(@entity.id), :confirm => 'Are you sure?', :method => :delete %> | 
<%= link_to 'Edit', edit_tapir_entity_path(@entity) %> |
<%= link_to 'Back', tapir_entities_path %>

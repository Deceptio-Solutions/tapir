<p>
<%= render 'display' %>
</p>

<%= render 'task_runner' %>

<p>
<b>Parent Entities:</b>
  <%= simple_format render_parents(@entity) %>
</p>  

<p>
<b>Children Entities:</b>
  <%= simple_format render_children(@entity) %>
</p>

<p>
<b>Task Runs on this entity:</b>
  <ul>
  <% @entity.task_runs.each {|r|%>
    <li><%= link_to r, task_run_path(r)  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Task Runs that found this entity:</b>
  <ul>
  <% @entity.incoming_task_runs.each {|r|%>
    <li><%= link_to r, task_run_path(r)  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Entity Mappings:</b>
  <ul>
  <% @entity.entity_mappings.each {|e|%>
    <li><%= link_to e, entity_mapping_path(e)  %></li>
  <% } %>
  </ul>
</p>



<%= link_to "Destroy", entity_path(@entity), :confirm => 'Are you sure?', :method => :delete %>| 
<%= link_to 'Edit', edit_entity_path(@entity) %> |
<%= link_to 'Back', entities_path %>

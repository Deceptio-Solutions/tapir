<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @entity.name %>
</p>

<p>
<b>Parents:</b>
  <ul>
  <% @entity.parents.each {|p|%>
    <li><%= link_to p, eval("#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @entity.children.each {|c|%>
    <li><%= link_to c, eval("#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @entity.tasks.each {|t|%>
    <li><%= link_to t, eval("#{t.underscore}_path(t.name)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Task Runs:</b>
  <ul>
  <% @entity.task_runs.each {|r|%>
    <li><%= link_to r, task_run_path(r.id)  %></li>
  <% } %>
  </ul>
</p>

<%= link_to 'Edit', edit_entity_path(@entity) %> |
<%= link_to "Destroy", @entity, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', entitys_path %>

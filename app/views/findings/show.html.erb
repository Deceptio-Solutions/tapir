<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @finding.content %>
</p>

<p>
<b>Parents:</b>
  <ul>
  <% @finding.parents.each {|p|%>
    <li><%= link_to p, eval("#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @finding.children.each {|c|%>
    <li><%= link_to c, eval("#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @finding.tasks.each {|t|%>
    <li><%= link_to t, eval("#{t.underscore}_path(t.name)")  %></li>
  <% } %>
  </ul>
</p>


<%= link_to 'Edit', edit_finding_path(@finding) %> |
<%= link_to "Destroy", @finding, :confirm => 'Are you sure?', :method => :delete %>
<%= link_to 'Back', findings_path %>

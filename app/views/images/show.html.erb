<p id="notice"><%= notice %></p>


<p>
  <b>local Path:</b>
  <%= @image.local_path %>
</p>

<p>
  <b>Remote Path:</b>
  <%= @image.remote_path %>
</p>

<p>
<b>Parents:</b>
  <ul>
  <% @image.parents.each {|p|%>
    <li><%= link_to p, eval("tapir_entities_#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @image.children.each {|c|%>
    <li><%= link_to c, eval("tapir_entities_#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @domain.tasks.each {|t|%>
    <li><%= link_to t, eval("tapir_#{t.underscore}_path(t.name)")  %></li>
  <% } %>
  </ul>
</p>

<p>
  <img src="<%= request.fullpath << "/../../tapir/" << @image.filename  %>">
</p>



<%= link_to 'Edit', edit_tapir_entities_image_path(@image) %> |
<%= link_to "Destroy", @image, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', tapir_entities_images_path %>

<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : AppConfig::APP_NAME %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "TAPIR" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/"><%= AppConfig::APP_NAME %> </a>
          <div class="nav-collapse">
            <%= tabs if user_signed_in? %>
            <%= render 'layouts/user_mgmt' %>
          </div>
        </div>
      </div>
    </div>
    <main role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span2"> 
              <%= render 'layouts/sidebar' %>
            </div>
            <div class="row">
              <div class="span10">
                <%= render 'layouts/messages' %>
                <%= yield %>
              </div>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div>
    </main>
  </body>
</html>
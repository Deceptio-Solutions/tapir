<p id="notice"><%= notice %></p>

<p>
  <b>Task Name:</b>
  <%= @task_run.task_name %>
</p>

<p>
  <b>Task object:</b>
  <%= @task_run.task_object_id %>
</p>

<p>
  <b>Task object type:</b>
  <%= @task_run.task_object_type %>
</p>

<p>
  <b>Task options hash:</b>
  <%= @task_run.task_options_hash %>
</p>

<p>
  <b>Task log:</b><br/>
  <%= @task_run.task_log.gsub("\n","<br>").html_safe %>
</p>

<p>
  <b>Associated Objects :</b>
  <ul>
    <% @task_run.object_mappings.each {|o|%>
      <li><%= link_to o, o %></li>
    <% } %>
  </ul>
</p>



<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Accepts</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= x =[]; task.allowed_types.each {|t| x << t.name};x  %> </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>

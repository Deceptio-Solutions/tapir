<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Accepts</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name, tapir_task_path(task.name) %></td>
    <td>&nbsp;</td>
    <td>
      <% x=[]; task.allowed_types.each do |t|  %>
       <%= link_to(t,"../#{t.path}s") %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>


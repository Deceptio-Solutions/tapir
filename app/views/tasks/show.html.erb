<p id="notice"><%= notice %></p>
<script>
function check(field) {
  for (i = 0; i < field.length; i++) {
    if(field[i].checked == true)
      field[i].checked = false;
    else
      field[i].checked = true;
  }
}
</script>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Entities:</b><br/>
  <form name="task_runner" id="task_runner" action="/task_runner" method="POST"> 
  <input type="hidden" name="task_name" id="task_name" value="<%=@task.name%>"><br/>
  <input type="checkbox" name="Toggle" value="Toggle" onClick="check(document.task_runner)"><br/>
  <% @task.candidates.each do |o|
     r = "#{o.underscore}##{o.id}"
   %>

    <input id="<%=r%>" type="checkbox" name="entities[<%=r%>]" /><a href="<%=request.url%>/../../../<%=o.path%>s/<%=o.id%>"><%=o%></a><br/>
    
  <% end %>
  <input id="submit" type="submit" /><br/>
  </form>
  </p>

<%= link_to 'Back', tapir_tasks_path %>


<p id="notice"><%= notice %></p>
<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Available Entities:</b><br/>
  <form name="task_runner" id="run_task" action="/run_task" method="POST"> 
  <%=token_tag form_authenticity_token %>
  <input type="hidden" name="task_name" id="task_name" value="<%=@task.name%>"><br/>
  <input type="checkbox" name="Toggle" value="Toggle" onClick="check(document.task_runner)"><br/>
  <% @task.candidates.each do |entity| %>
    <input id="/entities/<%=entity.id%>" type="checkbox" name="entities[<%="#{entity._type}##{entity.id}"%>]" /><%= "#{entity}" %><br/>
  <% end %>
  <input id="submit" type="submit" /><br/>
  </form>
  </p>

<%= link_to 'Back', tasks_path %>


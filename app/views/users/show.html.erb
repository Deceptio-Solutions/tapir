<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Usernames:</b>
    <ul>
      <% @user.usernames.each do |u| %></td>
        <li> <%= u %> </li>
      <% end %>
    </ul>
</p>

<p>
  <b>Organization:</b>
  <%= @user.organization_id %>
</p>


<p>
<b>Parents:</b>
  <ul>
  <% @user.parents.each {|p|%>
    <li><%= link_to p, eval("tapir_entities_#{p.underscore}_path(p)")  %></li>
  <% } %>
  </ul>
</p>  

<p>
<b>Children:</b>
  <ul>
  <% @user.children.each {|c|%>
    <li><%= link_to c, eval("tapir_entities_#{c.underscore}_path(c)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Tasks:</b>
  <ul>
  <% @user.tasks.each {|t|%>
    <li><%= link_to t, eval("tapir_#{t.underscore}_path(t.name)")  %></li>
  <% } %>
  </ul>
</p>

<p>
<b>Task Runs:</b>
  <ul>
  <% @user.task_runs.each {|r|%>
    <li><%= link_to r, task_run_path(r.id)  %></li>
  <% } %>
  </ul>
</p>

<%= link_to 'Edit', edit_tapir_entities_user_path(@user) %> |
<%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', tapir_entities_users_path %>
